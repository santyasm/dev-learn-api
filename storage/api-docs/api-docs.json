{
    "openapi": "3.0.0",
    "info": {
        "title": "Dev Learn API Documentation",
        "description": "API documentation for the Dev Learn platform, managing courses, enrollments, users, and videos.",
        "contact": {
            "email": "yasantpro@gmail.com"
        },
